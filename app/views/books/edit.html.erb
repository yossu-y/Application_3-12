<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<h6 class="booktitle">Title</h6>
<%= f.text_field :title %>

<h6 class="bookbody">Body</h6>
<%= f.text_area :body %>

<h4>
<%= f.submit " Update Book " %>
</h4>
<div class="link">
<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", new_book_path(@book.id) %>
</div>

<% end %>


