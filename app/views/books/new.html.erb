<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book,url: "/books", method: :post do |f| %>
  <h4 class="book-title">Title</h4>
  <%= f.text_field :title %>

  <h4 class="book-body">Body</h4>
  <%= f.text_area :body %>

  <h4>
  <%= f.submit "Create book" %>
  </h4>


  <% end %>
